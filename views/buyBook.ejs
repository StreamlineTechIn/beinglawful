  <!-- Form Section -->
  <section class="form-section flex items-center justify-center" data-aos="fade-up">
    <div class="form-container" data-aos="fade-up" data-aos-delay="200">
      <h2 class="text-lg sm:text-xl md:text-2xl font-bold text-center mb-6">Purchase Being Lawful Book</h2>
      <% if (error) { %>
        <div class="error-message text-center mb-4"><%= error %></div>
      <% } %>
      <form id="bookOrderForm" action="/submit-book-order" method="POST" class="space-y-4">
        <div>
          <label for="buyerName" class="block text-sm font-medium text-gray-700">Full Name *</label>
          <input type="text" id="buyerName" name="buyerName" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-600 focus:ring focus:ring-blue-600 focus:ring-opacity-50" placeholder="Enter your full name">
          <p class="error-message hidden" id="buyerNameError">Please enter a valid name.</p>
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700">Email Address *</label>
          <input type="email" id="email" name="email" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-600 focus:ring focus:ring-blue-600 focus:ring-opacity-50" placeholder="Enter your email">
          <p class="error-message hidden" id="emailError">Please enter a valid email address.</p>
        </div>
        <div>
          <label for="phone" class="block text-sm font-medium text-gray-700">Phone Number *</label>
          <input type="tel" id="phone" name="phone" required pattern="[0-9]{10}" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-600 focus:ring focus:ring-blue-600 focus:ring-opacity-50" placeholder="Enter your 10-digit phone number">
          <p class="error-message hidden" id="phoneError">Please enter a valid 10-digit phone number.</p>
        </div>
        <div>
          <label for="address" class="block text-sm font-medium text-gray-700">Address *</label>
          <textarea id="address" name="address" required rows="4" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-600 focus:ring focus:ring-blue-600 focus:ring-opacity-50" placeholder="Enter your full address"></textarea>
          <p class="error-message hidden" id="addressError">Please enter a valid address.</p>
        </div>
        <div>
          <label for="city" class="block text-sm font-medium text-gray-700">City *</label>
          <input type="text" id="city" name="city" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-600 focus:ring focus:ring-blue-600 focus:ring-opacity-50" placeholder="Enter your city">
          <p class="error-message hidden" id="cityError">Please enter a valid city.</p>
        </div>
        <div>
          <label for="pincode" class="block text-sm font-medium text-gray-700">Pincode *</label>
          <input type="text" id="pincode" name="pincode" required pattern="[0-9]{6}" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-600 focus:ring focus:ring-blue-600 focus:ring-opacity-50" placeholder="Enter your 6-digit pincode">
          <p class="error-message hidden" id="pincodeError">Please enter a valid 6-digit pincode.</p>
        </div>
        <div>
          <label for="quantity" class="block text-sm font-medium text-gray-700">Quantity *</label>
          <input type="number" id="quantity" name="quantity" required min="1" max="10" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-600 focus:ring focus:ring-blue-600 focus:ring-opacity-50" placeholder="Enter number of copies (1-10)">
          <p class="error-message hidden" id="quantityError">Please enter a quantity between 1 and 10.</p>
        </div>
        <button type="submit" class="w-full px-4 py-2 bg-gray-800 text-white rounded-md hover:bg-blue-600 transform hover:-translate-y-1 transition-all duration-300 text-sm">Submit Order</button>
      </form>
