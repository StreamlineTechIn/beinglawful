    function throttle(func, limit) {
      let inThrottle;
      return function() {
        if (!inThrottle) {
          func.apply(this, arguments);
          inThrottle = true;
          setTimeout(() => inThrottle = false, limit);
        }
      };
    }

    // Modal Functions
    function openModal(element, mediaType) {
      const modal = document.getElementById('imageModal');
      const modalImage = document.getElementById('modalImage');
      const modalVideo = document.getElementById('modalVideo');
      if (mediaType === 'Image') {
        modalImage.src = element.src;
        modalImage.alt = element.alt || 'Uploaded Image';
        modalImage.classList.remove('hidden');
        modalVideo.classList.add('hidden');
        modalImage.onerror = function() {
          console.error('Failed to load image:', modalImage.src);
          modal.classList.remove('active');
        };
      } else {
        modalVideo.querySelector('source').src = element.querySelector('source').src;
        modalVideo.load();
        modalVideo.classList.remove('hidden');
        modalImage.classList.add('hidden');
        modalVideo.onerror = function() {
          console.error('Failed to load video:', modalVideo.src);
          modal.classList.remove('active');
        };
      }
      modal.classList.add('active');
    }

    function closeModal(event) {
      const modal = document.getElementById('imageModal');
      if (event.target.classList.contains('modal') || event.target.classList.contains('close-modal')) {
        modal.classList.remove('active');
        document.getElementById('modalVideo').pause();
      }
    }

    // Keyboard Support for Modal
    document.addEventListener('keydown', function(event) {
      const modal = document.getElementById('imageModal');
      if (event.key === 'Escape' && modal.classList.contains('active')) {
        modal.classList.remove('active');
        document.getElementById('modalVideo').pause();
      }
    });

    // Event Delegation for Gallery Media
    document.getElementById('gallery-grid').addEventListener('click', function(event) {
      if (event.target.tagName === 'IMG') {
        openModal(event.target, 'Image');
      } else if (event.target.tagName === 'VIDEO' || event.target.closest('video')) {
        openModal(event.target.closest('video'), 'Video');
      }
    });

    // Post to Website Function
    async function postToWebsite(button) {
      event.stopPropagation();
      const postText = button.querySelector('.post-text');
      const postingText = button.querySelector('.posting-text');
      const fileInput = document.getElementById('mediaFile');
      const captionInput = document.getElementById('caption');
      const successMessage = document.getElementById('success-message');
      const errorMessage = document.getElementById('error-message');

      if (!fileInput || !fileInput.files || fileInput.files.length === 0) {
        errorMessage.textContent = 'Please select at least one file to post';
        errorMessage.style.display = 'block';
        setTimeout(() => { errorMessage.style.display = 'none'; }, 5000);
        return;
      }

      for (const file of fileInput.files) {
        if (file.size > 5 * 1024 * 1024) { // 5MB limit
          errorMessage.textContent = `File ${file.name} exceeds 5MB limit`;
          errorMessage.style.display = 'block';
          setTimeout(() => { errorMessage.style.display = 'none'; }, 5000);
          return;
        }
      }

      if (postText && postingText) {
        postText.classList.add('hidden');
        postingText.classList.remove('hidden');
        button.disabled = true;
      }

      try {
        const user = firebase.auth().currentUser;
        if (!user) {
          throw new Error('Please log in to upload files');
        }
        const idToken = await user.getIdToken();
        const formData = new FormData();
        for (const file of fileInput.files) {
          formData.append('mediaFile', file);
        }
        if (captionInput && captionInput.value) {
          formData.append('caption', captionInput.value);
        }

        const response = await fetch('/post-to-website', {
          method: 'POST',
          headers: {
            'Authorization': `Bearer ${idToken}`
          },
          body: formData
        });

        if (!response.ok) {
          const errorData = await response.json().catch(() => ({}));
          throw new Error(errorData.error || `Failed to post to website: ${response.statusText}`);
        }

        const result = await response.json();
        successMessage.innerHTML = `Successfully posted to website! ${result.files.map(file => `<a href="${file.url}" target="_blank">View ${file.storagePath.split('/').pop()}</a>`).join(', ')}`;
        successMessage.classList.remove('hidden');
        document.getElementById('upload-form').reset();
        setTimeout(() => {
          successMessage.classList.add('hidden');
          location.reload();
        }, 5000);
      } catch (error) {
        console.error('Post failed:', error);
        errorMessage.textContent = `Failed to post to website: ${error.message}`;
        errorMessage.style.display = 'block';
        setTimeout(() => { errorMessage.style.display = 'none'; }, 5000);
      } finally {
        if (postText && postingText) {
          postText.classList.remove('hidden');
          postingText.classList.add('hidden');
          button.disabled = false;
        }
      }
    }

    // Check Admin Status and Toggle Upload Form
    firebase.auth().onAuthStateChanged(async (user) => {
      const uploadSection = document.getElementById('upload-photo');
      const errorMessage = document.getElementById('error-message');
      if (user) {
        try {
          const idTokenResult = await user.getIdTokenResult();
          if (idTokenResult.claims.isAdmin) {
            uploadSection.classList.remove('hidden');
          } else {
            uploadSection.classList.add('hidden');
          }
        } catch (error) {
          console.error('Error checking admin status:', error);
          uploadSection.classList.add('hidden');
          errorMessage.textContent = 'Error checking admin status: ' + error.message;
          errorMessage.style.display = 'block';
          setTimeout(() => { errorMessage.style.display = 'none'; }, 5000);
        }
      } else {
        uploadSection.classList.add('hidden');
      }
    });

    // Initialize on Page Load
    document.addEventListener('DOMContentLoaded', function() {
      document.getElementById('imageModal').addEventListener('click', closeModal);
    });
  </script>
