<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login to Being Lawful</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background-color: #f5f6f8;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
    }

    .login-container {
      background: white;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      width: 100%;
      max-width: 600px;
      box-sizing: border-box;
    }

    h2 {
      text-align: center;
      color: #2c3e50;
      margin-bottom: 20px;
    }

    .tabs {
      display: flex;
      justify-content: center;
      border-bottom: 1px solid #ccc;
      margin-bottom: 20px;
    }

    .tab {
      padding: 8px 16px;
      cursor: pointer;
      font-weight: 500;
      border-radius: 5px 5px 0 0;
      color: #2c3e50;
      border: 1px solid transparent;
    }

    .tab.active {
      border: 1px solid #4caf50;
      border-bottom: none;
      background-color: #e8f5e9;
      color: #388e3c;
    }

    .tab-content {
      display: none;
    }

    .tab-content.active {
      display: block;
    }

    .form-group {
      margin-bottom: 15px;
    }

    label {
      display: block;
      margin-bottom: 5px;
      color: #333;
    }

    input[type="text"],
    input[type="password"] {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 14px;
      box-sizing: border-box;
    }

    input:focus {
      border-color: #4caf50;
      outline: none;
      box-shadow: 0 0 0 2px rgba(76, 175, 80, 0.2);
    }

    button {
      width: 100%;
      padding: 10px;
      background-color: #4caf50;
      color: white;
      border: none;
      border-radius: 6px;
      font-size: 16px;
      cursor: pointer;
      margin-top: 10px;
    }

    button:hover {
      background-color: #43a047;
    }
  </style>
</head>
<body>

  <div class="login-container">
    <h2>Login to Being Lawful</h2>
    <div class="tabs">
      <div class="tab active" data-tab="student">Student</div>
      <div class="tab" data-tab="school">School</div>
      <div class="tab" data-tab="trainer">Trainer</div>
    </div>

    <!-- Student Login -->
    <div class="tab-content active" id="student">
      <form action="/student-login" method="POST">
        <div class="form-group">
          <label for="student-username">Username (Parent Mobile Number):</label>
          <input type="text" id="student-username" name="username" required>
        </div>
        <div class="form-group">
          <label for="student-password">Password (Birthdate - DDMMYYYY):</label>
          <input type="password" id="student-password" name="password" required>
        </div>
        <button type="submit">Login as Student</button>
      </form>
    </div>

    <!-- School Login -->
    <div class="tab-content" id="school">
      <form action="/school-login" method="POST">
        <div class="form-group">
          <label for="school-username">Username (School Email):</label>
          <input type="text" id="school-username" name="username" required>
        </div>
        <div class="form-group">
          <label for="school-password">Password (Principal Number):</label>
          <input type="password" id="school-password" name="password" required>
        </div>
        <button type="submit">Login as School</button>
      </form>
    </div>

    <!-- Trainer Login -->
    <div class="tab-content" id="trainer">
      <form action="/trainer-login" method="POST">
        <div class="form-group">
          <label for="trainer-username">Username (Trainer Email):</label>
          <input type="text" id="trainer-username" name="username" required>
        </div>
        <div class="form-group">
          <label for="trainer-password">Password (Mobile Number):</label>
          <input type="password" id="trainer-password" name="password" required>
        </div>
        <button type="submit">Login as Trainer</button>
      </form>
    </div>
  </div>

  <script>
    const tabs = document.querySelectorAll('.tab');
    const contents = document.querySelectorAll('.tab-content');

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        tabs.forEach(t => t.classList.remove('active'));
        contents.forEach(c => c.classList.remove('active'));

        tab.classList.add('active');
        document.getElementById(tab.dataset.tab).classList.add('active');
      });
    });
  </script>

</body>
</html>
