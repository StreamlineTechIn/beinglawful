<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Participation - Being Lawful</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }
        .form-container {
            max-width: 600px;
            margin: 0 auto;
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .form-container h2 {
            text-align: center;
            color: #333;
        }
        .form-container form {
            display: flex;
            flex-direction: column;
        }
        .form-container label {
            margin-bottom: 5px;
            font-weight: bold;
        }
        .form-container input, .form-container select {
            margin-bottom: 15px;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        .form-container button {
            padding: 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
        .form-container button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Student Participation Form</h2>
        <form action="/participate" method="POST">
            <input type="hidden" name="type" value="<%= type %>">
            <label for="studentName">Student Name *</label>
            <input type="text" id="studentName" name="studentName" required>

            <label for="schoolNameDropdown">School Name *</label>
            <select id="schoolNameDropdown" name="schoolNameDropdown" required>
                <option value="">Select a school</option>
                <% schoolNames.forEach(school => { %>
                    <option value="<%= school %>"><%= school %></option>
                <% }) %>
            </select>

            <label for="birthdate">Birth Date (YYYY-MM-DD) *</label>
            <input type="date" id="birthdate" name="birthdate" required>

            <label for="studentClass">Class *</label>
            <input type="text" id="studentClass" name="studentClass" required>

            <label for="parentMobile1">Parent Mobile 1 *</label>
            <input type="text" id="parentMobile1" name="parentMobile1" required>

            <label for="parentMobile2">Parent Mobile 2</label>
            <input type="text" id="parentMobile2" name="parentMobile2">

            <label for="parentEmail">Parent Email *</label>
            <input type="email" id="parentEmail" name="parentEmail" required>

            <label for="address">Address *</label>
            <input type="text" id="address" name="address" required>

            <label for="city">City *</label>
            <input type="text" id="city" name="city" required>

            <label for="pincode">Pincode *</label>
            <input type="text" id="pincode" name="pincode" required>

            <button type="submit">Submit</button>
        </form>
    </div>
</body>
</html>