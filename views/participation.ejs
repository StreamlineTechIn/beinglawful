<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Participation Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            padding: 20px;
        }
        .form-container {
            max-width: 800px;
            margin: 0 auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .form-container h2 {
            text-align: center;
            margin-bottom: 20px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-group label {
            font-weight: 500;
        }
        .form-group input, .form-group select {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .btn-submit {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            font-weight: 600;
            cursor: pointer;
        }
        .btn-submit:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Participation Form</h2>
        <form action="/participate" method="POST">
            <div class="form-group">
                <label for="studentName">Student Name</label>
                <input type="text" id="studentName" name="studentName" required>
            </div>
            <div class="form-group">
                <label for="schoolNameDropdown">School Name (Dropdown)</label>
                <select id="schoolNameDropdown" name="schoolNameDropdown">
                    <option value="">Select School</option>
                    <% schoolNames.forEach(school => { %>
                        <option value="<%= school %>"><%= school %></option>
                    <% }) %>
                </select>
            </div>
            <div class="form-group">
                <label for="birthdate">Birthdate</label>
                <input type="date" id="birthdate" name="birthdate" required>
            </div>
            <div class="form-group">
                <label for="studentClass">Class</label>
                <input type="text" id="studentClass" name="studentClass" required>
            </div>
           
            <div class="form-group">
                <label for="parentMobile1">Parent Mobile 1</label>
                <input type="tel" id="parentMobile1" name="parentMobile1" pattern="[0-9]{10}" placeholder="Enter 10-digit number" required>
            </div>
            <div class="form-group">
                <label for="parentMobile2">Parent Mobile 2 </label>
                <input type="tel" id="parentMobile2" name="parentMobile2" pattern="[0-9]{10}" placeholder="Enter 10-digit number" required>
            </div>
            <div class="form-group">
                <label for="parentEmail">Parent Email</label>
                <input type="email" id="parentEmail" name="parentEmail" required>
            </div>
            <div class="form-group">
                <label for="address">Address</label>
                <input type="text" id="address" name="address" required>
            </div>
            <div class="form-group">
                <label for="city">City</label>
                <input type="text" id="city" name="city" required>
            </div>
            <div class="form-group">
                <label for="pincode">Pincode (6 digits)</label>
                <input type="text" id="pincode" name="pincode" pattern="[0-9]{6}" placeholder="Enter 6-digit pincode" required>
            </div>
            <input type="hidden" name="type" value="<%= type %>">
            <button type="submit" class="btn-submit">Submit</button>
        </form>
    </div>
</body>
</html>