<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>School Participation - Being Lawful</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 20px;
        }
        .participation-container {
            max-width: 700px;
            margin: 0 auto;
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }
        .participation-container h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #2c3e50;
        }
        .form-label {
            font-weight: 500;
            color: #2c3e50;
        }
        .btn-custom {
            width: 100%;
            padding: 12px;
            background-color: #28a745;
            color: #fff;
            border: none;
            border-radius: 5px;
            font-weight: 600;
            cursor: pointer;
        }
        .btn-custom:hover {
            background-color: #e4fbab;
        }
        .school-list {
            margin-top: 30px;
        }
        .school-list h3 {
            color: #9e6407;
            margin-bottom: 20px;
        }
        .table th, .table td {
            vertical-align: middle;
        }
        .error-message {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 0.25rem;
            display: none;
        }
        .welcome-message {
            background: linear-gradient(135deg, #e8f5e9, #ffffff);
            border-left: 5px solid #ffbf0e;
            padding: 25px 30px;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            animation: fadeIn 1s ease-in-out;
            transition: transform 0.3s ease;
        }
        .welcome-message:hover {
            transform: scale(1.01);
        }
        .welcome-message h3 {
            font-size: 1.8rem;
            font-weight: 700;
            color: #ffb700;
            margin-bottom: 15px;
            text-shadow: 1px 1px 0 #d4edda;
        }
        .welcome-message p {
            font-size: 1rem;
            color: #333;
        }
        .welcome-message ul {
            padding-left: 0;
        }
        .welcome-message ul li {
            list-style: none;
            margin-bottom: 8px;
            font-weight: 500;
            color: #1c2701;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .welcome-message ul li::before {
            content: "âœ”";
            color: #191e01;
            font-weight: bold;
            margin-right: 8px;
        }
        @keyframes fadeIn {
            0% { opacity: 0; transform: translateY(-10px); }
            100% { opacity: 1; transform: translateY(0); }
        }
    </style>
</head>
<body>
    <div class="participation-container">
        <h2>School Participation Form</h2>

        <div class="welcome-message mb-4">
            <h3 class="text-center">Welcome to <span class="text-dark">Being Lawful</span>!</h3>
            <p class="text-center">We are delighted your school is participating in this historic initiative celebrating 75 years of our Constitution.</p>
            <p class="text-center">By joining, you're contributing to:</p>
            <ul class="text-center">
                <li>Fostering constitutional values</li>
                <li>Promoting civic responsibility</li>
                <li>Inspiring future leaders</li>
            </ul>
            <p class="text-center fw-bold mt-3">Your participation reflects your school's leadership in building a more lawful and just society. ðŸŒ±</p>
        </div>

        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success">
                <%= success %>
            </div>
        <% } %>

        <% if (errors && errors.length > 0) { %>
            <div class="alert alert-danger">
                <ul>
                    <% errors.forEach(error => { %>
                        <li><%= error.msg %></li>
                    <% }) %>
                </ul>
            </div>
        <% } %>

        <form action="/school-participate" method="POST" id="schoolParticipationForm">
            <div class="mb-3">
                <label for="schoolName" class="form-label">School Name</label>
                <input type="text" class="form-control" id="schoolName" name="schoolName" required>
            </div>

            <div class="mb-3">
                <label for="city" class="form-label">City</label>
                <input type="text" class="form-control" id="city" name="city" required>
            </div>

            <div class="mb-3">
                <label for="district" class="form-label">District</label>
                <input type="text" class="form-control" id="district" name="district" required>
            </div>

            <div class="mb-3">
                <label for="pincode" class="form-label">Pincode</label>
                <input type="text" class="form-control" id="pincode" name="pincode" required>
            </div>

            <div class="mb-3">
                <label for="schoolPhoneNumber" class="form-label">School Phone Number</label>
                <input type="text" class="form-control" id="schoolPhoneNumber" name="schoolPhoneNumber" required>
            </div>

            <div class="mb-3">
                <label for="schoolEmail" class="form-label">School Email</label>
                <input type="email" class="form-control" id="schoolEmail" name="schoolEmail" required>
            </div>

            <div class="mb-3">
                <label for="principalNumber" class="form-label">Principal Number</label>
                <input type="text" class="form-control" id="principalNumber" name="principalNumber" required>
            </div>

            <div class="mb-3">
                <label for="principalEmail" class="form-label">Principal Email</label>
                <input type="email" class="form-control" id="principalEmail" name="principalEmail" required>
            </div>

            <div class="mb-3">
                <label for="civicsTeacherNumber" class="form-label">Civics Teacher Number</label>
                <input type="text" class="form-control" id="civicsTeacherNumber" name="civicsTeacherNumber" required>
            </div>

            <div class="mb-3">
                <label for="civicsTeacherEmail" class="form-label">Civics Teacher Email</label>
                <input type="email" class="form-control" id="civicsTeacherEmail" name="civicsTeacherEmail" required>
            </div>

            <div class="mb-3">
                <label for="eventDate1" class="form-label">Preferred Event Date 1</label>
                <input type="date" class="form-control" id="eventDate1" name="eventDate1" required>
                <div class="error-message" id="eventDate1Error">Please select a date after June 14, 2025.</div>
            </div>

            <div class="mb-3">
                <label for="eventDate2" class="form-label">Preferred Event Date 2</label>
                <input type="date" class="form-control" id="eventDate2" name="eventDate2" required>
                <div class="error-message" id="eventDate2Error">Please select a date after June 14, 2025, and different from other dates.</div>
            </div>

            <div class="mb-3">
                <label for="eventDate3" class="form-label">Preferred Event Date 3</label>
                <input type="date" class="form-control" id="eventDate3" name="eventDate3" required>
                <div class="error-message" id="eventDate3Error">Please select a date after June 14, 2025, and different from other dates.</div>
            </div>

            <div class="mb-3">
                <label for="eventDate4" class="form-label">Preferred Event Date 4</label>
                <input type="date" class="form-control" id="eventDate4" name="eventDate4" required>
                <div class="error-message" id="eventDate4Error">Please select a date after June 14, 2025, and different from other dates.</div>
            </div>

            <div class="mb-3">
                <label for="referenceName" class="form-label">Reference Name</label>
                <input type="text" class="form-control" id="referenceName" name="referenceName" required>
            </div>

            <button type="submit" class="btn-custom">Submit</button>
        </form>

<div class="school-list">
    <h3>Approved Schools</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>School Name</th>
                <th>City</th>
            </tr>
        </thead>
        <tbody>
            <% schools.forEach(school => { %>
                <tr>
                    <td><%= school.schoolName %></td>
                    <td><%= school.city %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('schoolParticipationForm').addEventListener('submit', function(event) {
            let valid = true;
            const today = new Date('2025-06-14');
            const eventDate1 = new Date(document.getElementById('eventDate1').value);
            const eventDate2 = new Date(document.getElementById('eventDate2').value);
            const eventDate3 = new Date(document.getElementById('eventDate3').value);
            const eventDate4 = new Date(document.getElementById('eventDate4').value);

            // Reset error messages
            document.querySelectorAll('.error-message').forEach(el => el.style.display = 'none');

            // Validate Date 1
            if (eventDate1 <= today) {
                document.getElementById('eventDate1Error').style.display = 'block';
                valid = false;
            }

            // Validate Date 2
            if (eventDate2 <= today || eventDate2.getTime() === eventDate1.getTime()) {
                document.getElementById('eventDate2Error').style.display = 'block';
                valid = false;
            }

            // Validate Date 3
            if (eventDate3 <= today || 
                eventDate3.getTime() === eventDate1.getTime() || 
                eventDate3.getTime() === eventDate2.getTime()) {
                document.getElementById('eventDate3Error').style.display = 'block';
                valid = false;
            }

            // Validate Date 4
            if (eventDate4 <= today || 
                eventDate4.getTime() === eventDate1.getTime() || 
                eventDate4.getTime() === eventDate2.getTime() || 
                eventDate4.getTime() === eventDate3.getTime()) {
                document.getElementById('eventDate4Error').style.display = 'block';
                valid = false;
            }

            if (!valid) {
                event.preventDefault();
            }
        });
    </script>
</body>
</html>