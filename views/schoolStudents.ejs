<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Students of <%= schoolName %> - Being Lawful</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }
        .container {
            max-width: 1000px;
            margin: 0 auto;
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        h2 {
            text-align: center;
            color: #333;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }
        th {
            background-color: #4CAF50;
            color: white;
        }
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }
        .approve-btn {
            background: green;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 4px;
            cursor: pointer;
        }
        .approved-text {
            color: green;
            font-weight: bold;
        }
    </style>
</head>
<body>

<div class="container">
    <h2>Students of <%= schoolName %></h2>

    <% if (students.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Student Name</th>
                    <th>Class</th>
                    <th>Parent Mobile 1</th>
                    <th>Parent Mobile 2</th>
                    <th>Parent Email</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>Pincode</th>
                    <th>Approval Status</th>
                </tr>
            </thead>
            <tbody>
                <% students.forEach(student => { %>
                    <tr>
                        <td><%= student.studentName %></td>
                        <td><%= student.studentClass %></td>
                        <td><%= student.parentMobile1 %></td>
                        <td><%= student.parentMobile2 || 'N/A' %></td>
                        <td><%= student.parentEmail %></td>
                        <td><%= student.address %></td>
                        <td><%= student.city %></td>
                        <td><%= student.pincode %></td>
               <td>
                <form action="/school-dashboard/approve-student/<%= student.id %>?username=<%= schoolEmail %>" method="POST">
                    <% if (!student.isApproved) { %>
                        <button type="submit" class="approve-btn">Approve</button>
                    <% } else { %>
                        <span class="approved-text">Approved</span>
                    <% } %>
                </form>
            </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p>No students found for this school.</p>
    <% } %>

</div>

</body>
</html>