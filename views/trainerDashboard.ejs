<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trainer Dashboard - Being Lawful</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/js-confetti@0.12.0/dist/js-confetti.browser.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .sidebar {
            width: 250px;
            background: linear-gradient(180deg, #1e7e34, #145a32);
            color: #fff;
            display: flex;
            flex-direction: column;
            padding-top: 20px;
            box-shadow: 2px 0 8px rgba(0, 0, 0, 0.15);
        }

        .sidebar h2 {
            padding: 10px 20px;
            margin: 0;
            font-size: 1.5em;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
            margin-top: 20px;
        }

        .sidebar ul li {
            padding: 12px 20px;
        }

        .sidebar ul li a {
            color: #ecf0f1;
            text-decoration: none;
            font-size: 1.1em;
            display: block;
            transition: 0.3s;
            cursor: pointer;
        }

        .sidebar ul li a:hover {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 4px;
        }

        .content {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
            background: #fff;
            position: relative;
        }

        h1 {
            color: #333;
            margin-top: 0;
            font-size: 2em;
        }

        button {
            padding: 10px 20px;
            background-color: #1565c0;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 1em;
            transition: 0.3s;
        }

        button:hover {
            background-color: #0d47a1;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background-color: #fff;
            margin-top: 20px;
        }

        th,
        td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #2c3e50;
            color: white;
            font-size: 1.1em;
        }

        tr:nth-child(even) {
            background-color: #f8f9fa;
        }

        tr:hover {
            background-color: #e9ecef;
        }

        .delete-btn {
            background-color: #dc3545;
            padding: 5px 10px;
            border: none;
            border-radius: 4px;
            color: white;
            cursor: pointer;
        }

        .delete-btn:hover {
            background-color: #c82333;
        }

        .media-preview img,
        .media-preview video {
            max-width: 200px;
            max-height: 200px;
            margin: 10px;
            border-radius: 4px;
        }

        input[type="date"],
        input[type="text"],
        input[type="file"],
        textarea {
            padding: 8px;
            width: 250px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-bottom: 10px;
        }

        textarea {
            width: 100%;
            height: 100px;
            resize: vertical;
        }

        .congrats-message {
            align-items: center;
            font-family: 'Poppins', sans-serif;
            font-size: 1.2em;
            font-weight: 600;
            color: #333;
            background: linear-gradient(45deg, #facc15, #f97316);
            padding: 10px 15px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
            margin-bottom: 20px;
            max-width: fit-content;
            animation: blink 1.5s ease-in-out 3; /* Runs 3 times */
        }

        .blink-message {
            position: absolute;
            top: 20px;
            right: 230px;
            display: flex;
            align-items: center;
            gap: 10px;
            font-family: 'Poppins', sans-serif;
            font-size: 1.2em;
            font-weight: 600;
            color: #ffffff;
            background: linear-gradient(45deg, #4b5e7e, #6b7280);
            padding: 10px 15px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease;
            animation: blink 1.5s ease-in-out 3; /* Runs 3 times */
        }

        @keyframes blink {
            0% { opacity: 1; }
            50% { opacity: 0.5; }
            100% { opacity: 1; }
        }

        .badge-container {
            position: absolute;
            top: 20px;
            right: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            padding: 10px;
            border-radius: 8px;
            font-family: 'Poppins', sans-serif;
            width: 200px;
            text-align: center;
            transition: all 0.3s ease;
        }

        .badge-container.bronze {
            background: linear-gradient(45deg, #8b5e3c, #a67c52);
            color: #fff;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        }

        .badge-container.silver {
            background: linear-gradient(45deg, #b0b7bf, #d1d5db);
            color: #333;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        }

        .badge-container.gold {
            background: linear-gradient(45deg, #d4a017, #e8c465);
            color: #333;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        }

        .badge-container.authentic-trainer {
            background: linear-gradient(45deg, #4b5e7e, #6b7280);
            color: #fff;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        }

        .badge-container.platinum {
            background: linear-gradient(45deg, #e0e7ff, #c3dafe);
            color: #1e3a8a;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        }

        .badge-container.none {
            background: #fff;
            color: #666;
            border: 1px solid #ccc;
        }

        .badge-symbol {
            font-size: 1.2em;
            line-height: 1;
            margin-right: 5px;
        }

        .badge-gif {
            width: 40px;
            height: 40px;
            border-radius: 8px;
        }

        .badge-text {
            font-size: 0.9em;
            font-weight: 600;
        }

        .section {
            display: none;
        }

        .section.active {
            display: block;
        }

        canvas {
            pointer-events: none;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        @media (max-width: 768px) {
            body {
                flex-direction: column;
                height: auto;
            }

            .sidebar {
                width: 100%;
                height: auto;
                flex-direction: row;
                justify-content: space-around;
                padding: 10px 0;
            }

            .sidebar ul {
                display: flex;
                flex-direction: row;
            }

            .sidebar ul li {
                padding: 10px;
            }

            .content {
                width: 100%;
                margin-left: 0;
                overflow: visible;
            }

            input[type="date"],
            input[type="text"],
            input[type="file"],
            textarea {
                width: 100%;
            }

            .sop-button-fixed {
                position: fixed;
                top: 20px;
                right: 20px;
                z-index: 999;
                background: linear-gradient(135deg, #00b09b, #96c93d);
                color: white;
                border: none;
                padding: 12px 20px;
                font-size: 1em;
                border-radius: 8px;
                cursor: pointer;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
                transition: transform 0.2s ease-in-out, box-shadow 0.3s ease-in-out;
            }

            .sop-button-fixed:hover {
                transform: scale(1.05);
                box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3);
            }

            .badge-container {
                width: 150px;
                padding: 8px;
                top: 10px;
                right: 10px;
            }

            .badge-symbol {
                font-size: 1em;
            }

            .badge-gif {
                width: 30px;
                height: 30px;
            }

            .badge-text {
                font-size: 0.8em;
            }

            .blink-message {
                position: fixed;
                top: 60px;
                right: 10px;
                font-size: 1em;
                padding: 8px 12px;
            }
        }

        h1 {
            font-size: xx-large;
            color: rgb(0, 0, 0);
            display: inline-block;
        }

        .word {
            opacity: 0;
            display: inline-block;
            animation: fadeIn 0.5s ease forwards;
        }

        @keyframes fadeIn {
            to {
                opacity: 1;
            }
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h2>Trainer Portal</h2>
        <ul>
            <li><a onclick="showSection('dashboard')">Dashboard</a></li>
            <li><a onclick="showSection('assigned-schools')">Assigned Schools</a></li>
            <li><a onclick="showSection('upload-media')">Upload Media</a></li>
            <li><a href="/trainer-gamezone">Gamezone</a></li>
            <li><a href="/logout">Logout</a></li>
        </ul>
    </div>

    <div class="content">
        <h1><span style="font-size: xx-large;">Welcome,</span> <%= trainerName %></h1>
        <% if (trainerData && trainerData.isApproved) { %>
            <div class="congrats-message">
                <span>Congratulations, <%= trainerName %>! You have completed the workshop!</span>
            </div>
        <% } %>
        <p><strong>Email:</strong> <%= email %></p>
        <p><strong>City:</strong> <%= city %></p>
        <p><strong>District:</strong> <%= district %></p>
        <p><strong>Profession:</strong> <%= profession %></p>

        <% if (error) { %>
            <p style="color: red;"><%= error %></p>
        <% } %>
        <% if (success) { %>
            <p style="color: green;"><%= success %></p>
        <% } %>

        <!-- Dashboard Section -->
        <div id="dashboard" class="section active">
            <% if (trainerData && trainerData.isApproved) { %>
                <!-- Badge Display Section -->
                <% 
                    const completedCount = completedSchools.length;
                    let badgeLevel = '';
                    let badgeSymbol = '';
                    let badgeText = '';
                    let confettiColors = [];
                    let confettiEmojis = [];
                    let confettiNumber = 100;

                    if (completedCount >= 30) {
                        badgeLevel = 'platinum';
                        badgeSymbol = 'ðŸ’Ž';
                        badgeText = 'Platinum Level';
                        confettiColors = ['#e0e7ff', '#c3dafe', '#93c5fd', '#3b82f6'];
                        confettiEmojis = ['ðŸ’Ž', 'âœ¨', 'ðŸ†'];
                        confettiNumber = 150;
                    } else if (completedCount >= 20) {
                        badgeLevel = 'authentic-trainer';
                        badgeSymbol = 'ðŸŒŸ';
                        badgeText = 'Authentic Trainer';
                        confettiColors = ['#4b5e7e', '#6b7280', '#9ca3af'];
                        confettiEmojis = ['ðŸŒŸ', 'âœ¨'];
                    } else if (completedCount >= 12) {
                        badgeLevel = 'gold';
                        badgeSymbol = 'ðŸ¥‡';
                        badgeText = 'Gold Level';
                        confettiColors = ['#d4a017', '#e8c465', '#facc15'];
                        confettiEmojis = ['â­', 'âœ¨'];
                    } else if (completedCount >= 8) {
                        badgeLevel = 'silver';
                        badgeSymbol = 'ðŸ¥ˆ';
                        badgeText = 'Silver Level';
                        confettiColors = ['#b0b7bf', '#d1d5db', '#e5e7eb'];
                        confettiEmojis = ['â­', 'âœ¨'];
                    } else if (completedCount >= 5) {
                        badgeLevel = 'bronze';
                        badgeSymbol = 'ðŸ¥‰';
                        badgeText = 'Bronze Level';
                        confettiColors = ['#8b5e3c', '#a67c52', '#d97706'];
                        confettiEmojis = ['â­', 'âœ¨'];
                    } else {
                        badgeLevel = 'none';
                        badgeSymbol = '';
                        badgeText = 'No Badge Yet';
                        confettiColors = [];
                        confettiEmojis = [];
                    }
                %>
                <div class="badge-container <%= badgeLevel %>" data-confetti-colors='<%= JSON.stringify(confettiColors) %>' data-confetti-emojis='<%= JSON.stringify(confettiEmojis) %>' data-confetti-number='<%= confettiNumber %>'>
                    <span class="badge-symbol"><%= badgeSymbol %></span>
                    <% if (badgeLevel !== 'none') { %>
                       <img src="https://media.giphy.com/media/3o7aD2d7hFVl3oO5zK/giphy.gif" alt="Badge Celebration GIF" class="badge-gif" />
                    <% } %>
                    <span class="badge-text"><%= badgeText %></span>
                </div>
              <div style="display: flex; align-items: center; gap: 10px; margin-top: 10px;">
    <h2 style="margin: 0 15px 0 0;">Trainer SOP</h2>
    <a href="https://drive.google.com/file/d/1WU_GaxOOu1mUBSUqL0G3JLgLrXgeEqYz/preview" target="_blank">
        <button>View</button>
    </a>
    <a href="https://drive.google.com/uc?export=download&id=1WU_GaxOOu1mUBSUqL0G3JLgLrXgeEqYz">
        <button>Download</button>
    </a>
</div>
                <h2>Workshop Materials</h2>
                <a href="https://drive.google.com/drive/folders/1eLAp8bFnKbsqTa7jEApylckT0X91fivS?usp=sharing" target="_blank">
                    <button>Download Workshop Materials</button>
                </a>

                <h2>Add Available Dates</h2>
                <form action="/trainer-dashboard/add-dates?username=<%= email %>" method="POST">
                    <input type="hidden" name="trainerEmail" value="<%= email %>" />
                    <div>
                        <label>Available Date 1:</label>
                        <input type="date" name="availableDates" required />
                    </div>
                    <div>
                        <label>Available Date 2 (optional):</label>
                        <input type="date" name="availableDates[]" />
                    </div>
                    <button type="submit">Add Dates</button>
                </form>

                <h3>Your Available Dates</h3>
                <% if (availableDates.length > 0) { %>
                    <table>
                        <tr>
                            <th>Date</th>
                            <th>Action</th>
                        </tr>
                        <% availableDates.forEach(date => { %>
                            <tr>
                                <td><%= new Date(date).toLocaleDateString() %></td>
                                <td>
                                    <form action="/trainer-dashboard/delete-date?username=<%= email %>" method="POST">
                                        <input type="hidden" name="trainerEmail" value="<%= email %>" />
                                        <input type="hidden" name="dateToDelete" value="<%= date %>" />
                                        <button class="delete-btn" type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </table>
                <% } else { %>
                    <p>No available dates added yet.</p>
                <% } %>
            <% } else { %>
                <p>You have not completed the Train the Trainer yet!</p>
            <% } %>
        </div>

        <!-- Upload Media Section -->
        <div id="upload-media" class="section">
            <h2>Upload Media</h2>
            <form action="/trainer-dashboard/upload-media?username=<%= email %>" method="POST" enctype="multipart/form-data">
                <input type="hidden" name="trainerEmail" value="<%= email %>" />
                <div>
                    <label for="photos">Upload Photos (Max 10):</label>
                    <input type="file" id="photos" name="photos" accept="image/*" multiple />
                </div>
                <div>
                    <label for="videos">Upload Videos (Max 5):</label>
                    <input type="file" id="videos" name="videos" accept="video/*" multiple />
                </div>
                <div>
                    <label for="mediaDescription">Media Description (Optional):</label>
                    <textarea id="mediaDescription" name="mediaDescription"></textarea>
                </div>
                <div>
                    <label for="mediaLink">External Media Link (Optional):</label>
                    <input type="text" id="mediaLink" name="mediaLink" placeholder="e.g., https://example.com" />
                </div>
                <button type="submit">Upload Media</button>
            </form>

            <h3>Your Uploaded Media</h3>
            <% if (mediaUploads && mediaUploads.length > 0) { %>
                <table>
                    <tr>
                        <th>Type</th>
                        <th>Preview</th>
                        <th>Description</th>
                        <th>Link</th>
                        <th>Uploaded At</th>
                    </tr>
                    <% mediaUploads.forEach(upload => { %>
                        <tr>
                            <td><%= upload.type %></td>
                            <td class="media-preview">
                                <% if (upload.type === 'image') { %>
                                    <img src="<%= upload.url %>" alt="Uploaded Image" />
                                <% } else if (upload.type === 'video') { %>
                                    <video src="<%= upload.url %>" controls></video>
                                <% } %>
                            </td>
                            <td><%= upload.description || 'N/A' %></td>
                            <td>
                                <% if (upload.link) { %>
                                    <a href="<%= upload.link %>" target="_blank">View Link</a>
                                <% } else { %>
                                    N/A
                                <% } %>
                            </td>
                            <td><%= upload.uploadedAt ? upload.uploadedAt.toLocaleDateString() : 'N/A' %></td>
                        </tr>
                    <% }) %>
                </table>
            <% } else { %>
                <p>No media uploaded yet.</p>
            <% } %>
        </div>

        <!-- Assigned Schools Section -->
        <div id="assigned-schools" class="section">
            <h2 class="text-xl font-bold mb-4 text-gray-700">Assigned Schools</h2>
            <button onclick="toggleSchoolView()" id="schoolViewBtn">Show Completed Schools</button>
            <div id="assigned-schools-table" class="school-table">
                <% if (assignedSchools.length === 0) { %>
                    <p class="text-gray-500">No schools assigned yet.</p>
                <% } else { %>
                    <div class="overflow-x-auto">
                        <table class="min-w-full border border-gray-200 rounded-lg shadow">
                            <thead class="bg-gray-100">
                                <tr>
                                    <th class="py-2 px-4 border-b text-left">School Name</th>
                                    <th class="py-2 px-4 border-b text-left">City</th>
                                    <th class="py-2 px-4 border-b text-left">District</th>
                                    <th class="py-2 px-4 border-b text-left">Event Date</th>
                                    <th class="py-3 px-4 text-left">School Phone</th>
                                    <th class="py-3 px-4 text-left">Civics Number</th>
                                    <th class="py-3 px-4 text-left">Principal Number</th>
                                    <th class="py-2 px-4 border-b text-left">Resources Confirmed</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% assignedSchools.forEach(school => { %>
                                    <tr class="border-t">
                                        <td class="py-2 px-4"><%= school.schoolName %></td>
                                        <td class="py-2 px-4"><%= school.city %></td>
                                        <td class="py-2 px-4"><%= school.district %></td>
                                        <td class="py-2 px-4"><%= school.eventDate %></td>
                                        <td class="py-2 px-4"><%= school.schoolPhoneNumber || 'N/A' %></td>
                                        <td class="py-2 px-4"><%= school.civicsTeacherNumber || 'N/A' %></td>
                                        <td class="py-2 px-4"><%= school.principalNumber || 'N/A' %></td>
                                        <td class="py-2 px-4"><%= school.resourcesConfirmed ? 'Yes' : 'No' %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>
            </div>
            <% if (trainerData && trainerData.isApproved && completedSchools && completedSchools.length > 0) { %>
                <div id="completed-schools-table" class="school-table" style="display: none;">
                    <div class="bg-white p-4 rounded shadow mb-6">
                        <h2 class="text-xl font-bold mb-4 text-green-700">Completed Schools</h2>
                        <div class="overflow-x-auto">
                            <table class="min-w-full bg-white border border-gray-200 rounded">
                                <thead class="bg-green-100 text-green-800">
                                    <tr>
                                        <th class="py-2 px-4 border-b">School Name</th>
                                        <th class="py-2 px-4 border-b">City</th>
                                        <th class="py-2 px-4 border-b">District</th>
                                        <th class="py-2 px-4 border-b">Event Date</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% completedSchools.forEach(school => { %>
                                        <tr class="hover:bg-green-50">
                                            <td class="py-2 px-4 border-b"><%= school.schoolName %></td>
                                            <td class="py-2 px-4 border-b"><%= school.city %></td>
                                            <td class="py-2 px-4 border-b"><%= school.district %></td>
                                            <td class="py-2 px-4 border-b"><%= school.eventDate %></td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <script>
        // Initialize JSConfetti
        const jsConfetti = new JSConfetti();

        function showSection(sectionId) {
            document.querySelectorAll('.section').forEach(section => {
                section.classList.remove('active');
            });
            document.getElementById(sectionId).classList.add('active');
            if (sectionId === 'assigned-schools') {
                document.getElementById('assigned-schools-table').style.display = 'block';
                document.getElementById('completed-schools-table').style.display = 'none';
                document.getElementById('schoolViewBtn').textContent = 'Show Completed Schools';
            } else if (sectionId === 'dashboard') {
                // Trigger confetti when switching to dashboard if badge exists
                triggerConfetti();
            }
        }

        function toggleSchoolView() {
            const assignedTable = document.getElementById('assigned-schools-table');
            const completedTable = document.getElementById('completed-schools-table');
            const button = document.getElementById('schoolViewBtn');
            
            if (assignedTable.style.display !== 'none') {
                assignedTable.style.display = 'none';
                completedTable.style.display = 'block';
                button.textContent = 'Show Assigned Schools';
            } else {
                assignedTable.style.display = 'block';
                completedTable.style.display = 'none';
                button.textContent = 'Show Completed Schools';
            }
        }

        function triggerConfetti() {
            const badgeContainer = document.querySelector('.badge-container');
            if (badgeContainer && !badgeContainer.classList.contains('none')) {
                const colors = JSON.parse(badgeContainer.getAttribute('data-confetti-colors') || '[]');
                const emojis = JSON.parse(badgeContainer.getAttribute('data-confetti-emojis') || '[]');
                const confettiNumber = parseInt(badgeContainer.getAttribute('data-confetti-number') || '100');
                if (colors.length > 0 || emojis.length > 0) {
                    jsConfetti.addConfetti({
                        emojis: emojis,
                        emojiSize: 30,
                        confettiColors: colors,
                        confettiRadius: 6,
                        confettiNumber: confettiNumber,
                        confettiSpeed: 5
                    });
                }
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            const badgeContainer = document.querySelector('.badge-container');
            if (badgeContainer && !badgeContainer.classList.contains('none')) {
                badgeContainer.classList.add('animate-scale-in');
                setTimeout(() => {
                    badgeContainer.classList.remove('animate-scale-in');
                }, 500);
                // Trigger confetti on page load
                triggerConfetti();
            }
            // Stop blinking on click
            document.addEventListener('click', () => {
                const congratsMessage = document.querySelector('.congrats-message');
                const blinkMessage = document.querySelector('.blink-message');
                if (congratsMessage) {
                    congratsMessage.style.animation = 'none';
                }
                if (blinkMessage) {
                    blinkMessage.style.animation = 'none';
                }
            });
        });
    </script>
</body>
</html>