<% if (error) { %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <strong class="font-bold">Error:</strong>
        <span class="block sm:inline"><%= error %></span>
    </div>
<% } %>
<% if (success) { %>
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4" role="alert">
        <strong class="font-bold">Success:</strong>
        <span class="block sm:inline"><%= success %></span>
    </div>
<% } %>

<div class="mt-4">
    <h2 class="text-2xl font-bold mb-4 text-gray-700">School Media Uploads</h2>
    <div class="space-y-4">
        <% schools.forEach(school => { %>
            <div class="bg-white border border-gray-200 rounded-lg shadow-md">
                <div class="p-4 bg-gray-100 cursor-pointer" onclick="this.nextElementSibling.classList.toggle('hidden')">
                    <h3 class="text-lg font-semibold text-gray-700">
                        <%= school.schoolName %> (<% if (school.mediaUploads && school.mediaUploads.length > 0) { %><%= school.mediaUploads.length %> Uploads<% } else { %>No Uploads<% } %>)
                    </h3>
                </div>
                <div class="p-4 hidden">
                    <% if (school.mediaUploads && school.mediaUploads.length > 0) { %>
                        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
                            <% school.mediaUploads.forEach(upload => { %>
                                <div class="bg-white border border-gray-200 rounded-lg shadow-md overflow-hidden">
                                    <% if (upload.type === 'image') { %>
                                        <img src="<%= upload.url %>" alt="Media Upload" class="w-full h-48 object-cover">
                                    <% } else if (upload.type === 'video') { %>
                                        <video controls class="w-full h-48 object-cover">
                                            <source src="<%= upload.url %>" type="<%= upload.contentType || 'video/mp4' %>">
                                            Your browser does not support the video tag.
                                        </video>
                                    <% } %>
                                    <div class="p-4">
                                        <h4 class="text-md font-semibold text-gray-700"><%= upload.description || 'No Description' %></h4>
                                        <% if (upload.link) { %>
                                            <p class="text-gray-600"><a href="<%= upload.link %>" target="_blank" class="text-blue-500 hover:underline">View Link</a></p>
                                        <% } %>
                                        <p class="text-sm text-gray-500">Uploaded: <%= upload.uploadedAt ? new Date(upload.uploadedAt).toLocaleString('en-US', { timeZone: 'Asia/Kolkata' }) : 'N/A' %></p>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <p class="text-gray-700">No media uploads available for this school.</p>
                    <% } %>
                </div>
            </div>
        <% }) %>
    </div>
</div>